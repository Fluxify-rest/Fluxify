{
  "$schema": "https://turborepo.com/schema.json",
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true
    },
    "test": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "cache": false,
      "persistent": true
    },
    "build": {
      "outputs": ["dist"]
    },
    "build:ui": {
      "outputs": [".next"],
      "dependsOn": ["^build"]
    },
    "build:standalone": {
      "outputs": ["dist"],
      "dependsOn": ["^build"]
    }
  }
}
