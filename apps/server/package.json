{
  "name": "@fluxify/server",
  "version": "1.0.0",
  "type": "module",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "bun --watch deployments/standalone.ts",
    "test": "vitest run",
    "lint": "tsc --noEmit",
    "build": "bun build deployments/standalone.ts --outdir=dist --bundle --target bun --minify --sourcemap=linked --external better-sqlite3 --external mysql2 --external sqlite3 --external mysql --external pg-query-stream --external tedious --external oracledb",
    "postbuild": "bun run ./scripts/postbuild.ts",
    "db:generate": "bun x drizzle-kit generate",
    "db:push": "bun x drizzle-kit push"
  },
  "keywords": [
    "configurable-backend-engine"
  ],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@types/bun": "^1.3.6",
    "@types/node": "^24.3.0",
    "@types/pg": "^8.15.5",
    "drizzle-kit": "^0.31.4",
    "tsx": "^4.20.4",
    "typescript": "^5.9.3",
    "@types/flexsearch": "^0.7.42",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@electric-sql/pglite": "^0.3.11",
    "@fluxify/adapters": "workspace:*",
    "@fluxify/blocks": "workspace:*",
    "@fluxify/lib": "workspace:*",
    "@hono/node-server": "^1.19.0",
    "@hono/standard-validator": "^0.1.5",
    "@hono/zod-validator": "^0.7.2",
    "@langchain/anthropic": "^1.3.17",
    "@langchain/core": "^1.1.24",
    "@langchain/google-genai": "^2.1.17",
    "@langchain/langgraph": "^1.1.4",
    "@langchain/openai": "^1.2.7",
    "@toon-format/toon": "^2.1.0",
    "better-auth": "^1.4.3",
    "dotenv": "^17.2.1",
    "drizzle-orm": "^0.44.4",
    "drizzle-zod": "^0.8.3",
    "flexsearch": "^0.8.212",
    "gray-matter": "^4.0.3",
    "hono": "^4.9.1",
    "hono-openapi": "^1.0.8",
    "ioredis": "^5.8.0",
    "langchain": "^1.2.21",
    "pg": "^8.16.3",
    "yaml": "^2.8.2",
    "zod": "^4.1.8"
  }
}
